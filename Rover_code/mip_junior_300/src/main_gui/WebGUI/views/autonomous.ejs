<div class="mt-4 p-3 text-black box" style="height:fit-content">
  <h4 style="text-align: center;">Autonomous Control</h4>
  <hr>
  <div class="container">
    <table class="table">
      <tr>
        <td style="padding-top:3%"><span>Number of Goal</span></td>
        <td>
          <input class="form-control" type="text" name="goalNumber" id="goalNumber" placeholder="1" size="10" autocomplete="off" required>
        </td>
        <td>
          <input class="btn btn-info" type="button" id="goalBtn" value="Done" disabled>
        </td>
      </tr>

      <tr>
        <td></td>
        <td style="text-align: center;">Goal : <span id="currGoal">0</span></td>
        <td></td>
      </tr>

      <tr>
        <td style="padding-top:4%">Latitude</td>
        <td>
          <input type="text" class="form-control cordinates" name="Latitude" id="lat" placeholder="21.203510" size="10"
          autocomplete="off" disabled>
        </td>
      </tr>
      
      <tr>
        <td style="padding-top:4%">Longitude</td>
        <td>
          <input type="text" class="form-control cordinates" name="Longitude" id="long" placeholder="72.839233" size="10"
          autocomplete="off" disabled>
        </td>
        <td>
          <input class="btn btn-info" type="button" id="enter" value="Enter" disabled>
        </td>
      </tr>

      <tr>
        <td></td>
        <td style="padding-left: auto;padding-right: auto;"><input class="btn btn-danger btn-lg" type="button" id="autonomousReset" value="Reset"></td>
        <td></td>
      </tr>

    </table>
    <p>Status - <span class="ctrlStatus" id="autonomousStatus">Closed</span></p>
    <div class="cam-btn">
        <input class="btn btn-info btn-lg" style="margin-right: 8%;" type="button" id="autonomousStart" value="Start" disabled>
        <input class="btn btn-danger btn-lg" style="margin-left: 8%;" type="button" id="autonomousEnd" value="End" disabled>
    </div>
        <div>
        <div class="row">
            <div class="col">
                <h5>Autonomous</h5>
            </div>
            <div class="col">
                <div class="form-check form-switch" style="padding-left: 90%;">
                    <input class="form-check-input" type="checkbox" id="switchAuto">
                </div>
            </div>
        </div>
        <p style="margin-top:4%; margin-bottom: 2%;">Current Goal: <span id="liveGoal">0</span></p>
        <p style="margin-bottom: 2%;">X: <span id="gpsX">0</span></p>
        <p style="margin-bottom: 2%;">Y: <span id="gpsY">0</span></p>
        <p style="margin-bottom: 2%;">Distance: <span id="goalDistance">0.0</span></p>
        <p style="margin-bottom: 2%;">Bearing: <span id="goalBearing">0.0</span></p>
        <p style="margin-bottom: 10%; margin-top: 4%;">Current Task : <span class="auto-status-btn-left" id="g2gTask">G2G</span><span class="auto-status-btn-right" id="obaTask">Obstacle Avoidance</span></p>
    </div>
  </div>
</div>
